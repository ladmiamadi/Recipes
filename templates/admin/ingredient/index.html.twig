{% extends 'admin/index.html.twig' %}

{% block content %}

	<div class="p-3">
		<h2 class="title text-center">Liste des ingrédients</h2>

	</div>
	<div class="text-right mb-4">
		<a href="{{ path('ingredient_new_admin')}}" class="boutton">Créer un ingrédient</a>


	</div>

	<div class="">
		<table class="table table-striped">
			<thead>
				<tr>

					<th>Nom de l'ingrédient</th>
					<th></th>
					<th></th>

				</tr>
			</thead>
			<tbody>
				{% for ingredient in ingredients %}
					<tr>

						<td>{{ ingredient.name }}</td>
						<td>
							<a href="{{ path('ingredient_edit_admin', {'id': ingredient.id}) }}" class="boutton">Editer</a>
						</td>
						<td>{{ include('admin/ingredient/_delete_form.html.twig') }}</td>

					</tr>
				{% else %}
					<tr>
						<td colspan="3">Pas d'élements trouvés</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


	</div>


{% endblock %}
