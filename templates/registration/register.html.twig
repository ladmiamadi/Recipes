{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block section %}
<div class="container section p-3">
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h2 class="title p-3 text-center">Formulaire d'inscription</h2>
	<div class="w-75 p-4 mx-auto insert-form">


		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.name, {label: 'Pr√©nom'}) }}


		{{ form_row(registrationForm.firstName, {label: 'Nom'}) }}

		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
		{{ form_row(registrationForm.agreeTerms, {
label: 'J\'ai lu et j\'accepte les termes et conditions d\'inscription'

        }) }}

    <div class="text-center m-4">
		<button type="submit" class="btn boutton">Valider</button>
    </div>

		{{ form_end(registrationForm) }}
	</div>
</div>


{% endblock %}
