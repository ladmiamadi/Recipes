<header class="container top">

	<div class="row pt-3 px-0">
		<div class="col mx-auto d-sm-block d-lg-none">
			<a href="#"><img src="../images/Burger.png" alt="menu"></a>
		</div>
		<div class="col-2">
			<a href="{{path('home')}}"><img src="../images/Logo.png" alt="Logo"></a>
		</div>
		<div class="col-md-1"></div>

		<div class="col-md-6 navbar d-md-flex d-sm-none">
			<ul class="navbar-nav">
				<li class="navbar-item">
					<a href="{{ path('category', {category: 'Entrées'})}}" class="navbar-link">Entrées</a>
				</li>
			</ul>
			<ul class="navbar-nav">
				<li class="navbar-item">
					<a href="{{ path('category', {category: 'Plats'})}}" class="navbar-link">Plats</a>

				</li>
			</ul>
			<ul class="navbar-nav">
				<li class="navbar-item">
					<a href="{{ path('category', {category: 'Desserts'})}}" class="navbar-link">Desserts</a>

				</li>
			</ul>
			<ul class="navbar-nav">
				<li class="navbar-item">
					<a href="{{ path('category', {category: 'Sauces'})}}" class="navbar-link">Sauces</a>

				</li>
			</ul>
			<ul class="navbar-nav">
				<li class="navbar-item">
					<a href="{{ path('category', {category: 'Boissons'})}}" class="navbar-link">Boissons</a>

				</li>
			</ul>

		</div>
		{% if app.user %}
			<div class="col-1"></div>
			<div class="col-md-1 name mt-5 pt-2">
				{% if app.user.roles == ["ROLE_ADMIN", "ROLE_USER"] %}
					<a href="{{ path('recipe_home_admin')}}">{{ app.user.name }}</a>


				{% else %}


					<a href="{{ path('user_profile')}}">{{ app.user.name }}</a>
				{% endif %}

			</div>


			<div class="col-md-1 d-md-block mt-5">
				<a href="{{ path('app_logout') }}"><img src="../images/logout.png" alt="logout" class="img-fluid"></a>
			</div>

		{% else %}
			<div class="col-1"></div>
			<div class="col-md-1 name mt-5 pt-2"></div>


			<div class="col-md-1 d-md-block mt-5">
				<a href="{{ path('app_login') }}"><img src="../images/Signin.png" alt="login" class="img-fluid"></a>
			</div>

		{% endif %}


	</div>

	<div class="row mx-auto">
		<div class="col"></div>
		<div class="d-sm-none d-md-block col-md-6 pt-0">
			<h5>Vite une idée, trouvez votre recette !</h5>
		</div>
		<div class="col"></div>


	</div>

</header>
